<div class="container">

  <h1><%= @cocktail.name %></h1>
  <%= link_to "Back to all cocktails", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

  <h3>ingredients</h3>
  <% if @cocktail.ingredients.empty? %>
    <p>Be the first to let a ingredient</p>
  <% else %>
    <ul class="list-group">
      <% @cocktail.ingredients.each do |ingredient| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill">
            <i class="fa <%= ingredient.name %>">
          </span>
          <%= ingredient.name %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render "ingredients/new", cocktail: @cocktail, ingredient: @ingredient %>

</div>
